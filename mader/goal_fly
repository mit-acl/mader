#!/bin/bash

# this script creates multiple windows to send goals to drons
# referred to fly script used for voxl setup, which is in /extras

# session name
SESSION=goal
WINDOW=base_station

# creates the session with a name and renames the window name
cmd="new-session -d -s $SESSION ; rename-window $WINDOW"
tmux -2 $cmd

# window number
w=0

# split tmux into 8x2
for i in {0..2}
do
	tmux select-pane -t $SESSION:$w.$i
	tmux split-window -v
	tmux select-layout -t $SESSION:$w.$i even-vertical
done

for i in 0 2 4
do
	tmux select-pane -t $SESSION:$w.$i	
	tmux split-window -h
done

# wait for .bashrc to load
sleep 1

# ssh each nuc
tmux send-keys -t $SESSION:$w.0 "ssh nuc1@192.168.15.2" C-m
tmux send-keys -t $SESSION:$w.1 "ssh nuc2@192.168.16.2" C-m
tmux send-keys -t $SESSION:$w.2 "ssh nuc3@192.168.17.2" C-m
tmux send-keys -t $SESSION:$w.3 "ssh nuc4@192.168.18.2" C-m
tmux send-keys -t $SESSION:$w.4 "ssh nuc5@192.168.19.2" C-m
tmux send-keys -t $SESSION:$w.5 "ssh nuc6@192.168.20.2" C-m

sleep 1

# send goals (randomly generated or position exchange)
if [ "$1" == "pos" ]; then
	# tmux send-keys -t $SESSION:$w.0 "roslaunch mader position_exchange.launch mode:=1 quad:=HX15"
	# tmux send-keys -t $SESSION:$w.1 "roslaunch mader position_exchange.launch mode:=2 quad:=HX16"
	tmux send-keys -t $SESSION:$w.2 "roslaunch mader position_exchange.launch mode:=1 quad:=HX17"
	tmux send-keys -t $SESSION:$w.3 "roslaunch mader position_exchange.launch mode:=3 quad:=HX18"
	tmux send-keys -t $SESSION:$w.4 "roslaunch mader position_exchange.launch mode:=4 quad:=HX19"
	tmux send-keys -t $SESSION:$w.5 "roslaunch mader position_exchange.launch mode:=6 quad:=HX20"
elif [ "$1" == "ran" ]; then
	tmux send-keys -t $SESSION:$w.0 "roslaunch mader random_goal.launch quad:=HX15"
	tmux send-keys -t $SESSION:$w.1 "roslaunch mader random_goal.launch quad:=HX16"
	tmux send-keys -t $SESSION:$w.2 "roslaunch mader random_goal.launch quad:=HX17"
	tmux send-keys -t $SESSION:$w.3 "roslaunch mader random_goal.launch quad:=HX18"
	tmux send-keys -t $SESSION:$w.4 "roslaunch mader random_goal.launch quad:=HX19"
	tmux send-keys -t $SESSION:$w.5 "roslaunch mader random_goal.launch quad:=HX20"
fi

tmux -2 attach-session -t $SESSION